        "@playwright/test": "^1.58.2",
        "@dhis2/cli-style": "^10.7.9",
        "@eslint/js": "^9.12.0",
        "@stylistic/eslint-plugin": "^5.3.1",
        "@types/react": "^18.3.1",
        "@types/react-dom": "^18.3.1",
        "concurrently": "^9.1.2",
        "eslint": "^9.12.0",
        "eslint-plugin-react": "^7.37.2",
        "globals": "^16.1.0",
        "jiti": "^2.5.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "turbo": "^2.5.6",
