{
    "name": "chap-frontend",
    "main": "index.js",
    "packageManager": "pnpm@10.14.0",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "linter:check": "turbo linter:check --parallel",
        "tsc:check": "turbo tsc:check --parallel",
        "format": "d2-style apply",
