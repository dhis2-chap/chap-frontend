{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "composite": true,
        "declaration": true,
        "declarationDir": "build/es",
        "outDir": "build/es",
        "strict": true,
        "jsx": "react",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "allowJs": false,
        "checkJs": false,
        "rootDir": "src",
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build", "dist"]
}
