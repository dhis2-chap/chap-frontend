{
    "compilerOptions": {
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "jsx": "react",
        "target": "es2021",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "build", "dist"]
}
